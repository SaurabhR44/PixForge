{
    "version": 2,
    "name": "pixforge",
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/local-images/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/images",
            "destination": "/api/index.js"
        },
        {
            "source": "/generate-image",
            "destination": "/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/$1"
        }
    ]
}